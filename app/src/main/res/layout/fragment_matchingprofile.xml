<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:paddingBottom="56dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/icon_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 프로필 섹션 -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yoon_big"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profile_info"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/profile_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/profile_image"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름: 윤동희"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="응원하는 팀: 롯데 자이언츠"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_win_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직관 승률: 70%"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰: 3 / 5 점 (2명)"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 자기소개 섹션 -->
    <TextView
        android:id="@+id/Text_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자기소개"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/profile_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lotte_sig_blue"
        android:padding="16dp"
        android:text="안녕하세요 롯데 응원하는 상남자 윤동희 입니다."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/Text_introduce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 리뷰 섹션 -->
    <TextView
        android:id="@+id/Text_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profile_intro"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/profile_review_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lotte_sig_blue"
        android:padding="16dp"
        android:text="누군가 이미 남긴 리뷰들"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/Text_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 요청 버튼 -->
    <Button
        android:id="@+id/request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요청하기"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>